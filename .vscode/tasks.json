{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Run C++ file",
            "type": "shell",
            "command": "'./${fileBasenameNoExtension}'",
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [
                "C/C++: clang++ build active file"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build and run the active C++ file",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ],
    "version": "2.0.0"
}